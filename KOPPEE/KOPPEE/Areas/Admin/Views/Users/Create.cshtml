@{
    Layout = "_AdminLayout";
}

@model CreateVM

<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Create User</h5>

            </div>
            <div class="card-body">
                <form method="post">

                    <div class="mb-3 form-group">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Surname" class="form-label">Surname</label>
                        <input asp-for="Surname" class="form-control" />
                        <span class="text-danger" asp-validation-for="Surname"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="UserName" class="form-label">Username</label>
                        <input asp-for="UserName" class="form-control" />
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>

                    <div class="form-group">
                        <label>Select Role</label>
                        <select class="form-control" name="role">
                            @foreach (string role in ViewBag.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="CheckPassword" class="form-label">Check Password</label>
                        <input asp-for="CheckPassword" class="form-control" />
                        <span class="text-danger" asp-validation-for="CheckPassword"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-secondary" asp-action="Index">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}