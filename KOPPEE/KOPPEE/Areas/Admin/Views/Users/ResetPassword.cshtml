@{
    Layout = "_AdminLayout";
}

@model ResetPasswordVM

<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Reset Password User</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            </div>
            <div class="card-body">
                <form method="post">
 
                    <div class="mb-3 form-group">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>

                    <div class="mb-3 form-group">
                        <label asp-for="CheckPassword" class="form-label">Check Password</label>
                        <input asp-for="CheckPassword" class="form-control" />
                        <span class="text-danger" asp-validation-for="CheckPassword"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-secondary" asp-action="Index">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}