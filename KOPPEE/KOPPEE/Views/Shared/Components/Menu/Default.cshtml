                    <h5 class="menu-price">$@product.Price</h5>
                </div>
                <div class="col-8 col-sm-9">
                    <h4>@product.Name</h4>
                    <p class="m-0">@product.Description</p>
                </div>
            </div>
        }
    }
</div>